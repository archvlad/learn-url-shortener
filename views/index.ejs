<%- include('_header') %>
<form action="/shorten" method="post">
        <div class="panel">
                <input
                type="text"
                class="form-control form-control-sm shadow-none"
                name="url"
                placeholder="Paste the URL to be shortened"
                />
                <button type="submit" class="btn btn-primary btn-sm">
                    Shorten URL
                </button>
            </div>
        </form>
        <% if (urls.length > 0) { %>
        <div class="stat-table" style="overflow-x:auto;">
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th width="60%">Original</th>
                        <th width="30%">Short</th>
                        <th width="10%" style="text-align: right;">Clicks</th>
                    </tr>
                </thead>
            <tbody>
                <% urls.forEach((url) => { %>
                <tr>
                    <td width="60%"><a href="<%= url.origUrl %>"><%= url.origUrl %></a></td>
                    <td width="30%"><a href="<%= url.shortUrl %>"><%= url.shortUrl %></a></td>
                    <td width="10%" style="text-align: right;"><%= url.clicks %></td>

                </tr>
                <% })%>
            </tbody>
            </table>
        </div>
<% } %>
    </div>
    <script src="/bootstrap.bundle.min.js"></script>
        </body>
</html>
